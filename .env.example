# Myanmar Election Visualization - Environment Configuration

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://election_user:your_password@localhost:5432/myanmar_election

# Application Settings
ENVIRONMENT=development
DEBUG_MODE=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Map Configuration
DEFAULT_MAP_PROVIDER=cartodb
DEFAULT_ZOOM_LEVEL=6
HEAT_MAP_RADIUS=15
HEAT_MAP_BLUR=8
HEAT_MAP_MIN_OPACITY=0.15
HEAT_MAP_INTENSITY_SCALE=0.8

# API Keys (Optional)
TOMTOM_API_KEY=your_tomtom_key_here
MAPBOX_API_KEY=your_mapbox_key_here
HERE_API_KEY=your_here_key_here

# Performance Settings
MAX_CONCURRENT_USERS=100
ENABLE_PERFORMANCE_MONITORING=true

# Security Settings (Production)
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/myanmar-election.log

# Data Sources
MIMU_DATA_PATH=/app/data/geojson/
PROCESSED_DATA_PATH=/app/data/processed/
RAW_DATA_PATH=/app/data/raw/

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30